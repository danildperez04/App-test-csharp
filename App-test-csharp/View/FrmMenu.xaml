<Window x:Class="App_test_csharp.View.FrmMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_test_csharp.View"
        mc:Ignorable="d"
        Title="FrmMenu" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="401*"/>
            <ColumnDefinition Width="399*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#121F3D" Grid.ColumnSpan="2" RenderTransformOrigin="0.515,0.508">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="21*"/>
                <ColumnDefinition Width="19*"/>
            </Grid.ColumnDefinitions>

            <Grid Background="#121F3D"  Margin="75,50,78,247">
                <Border Background="#FF6363" BorderBrush="Silver" BorderThickness="1" CornerRadius="20,20,20,20" >
                    <Label HorizontalAlignment="Left" Width="70" Margin="0,9,0,50">
                        <Label.Background>
                            <ImageBrush ImageSource="/Images/eng.png"/>
                        </Label.Background>
                    </Label>
                </Border>
                <Border Background="#40577B" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,20,20" Margin="0,85,0,0" >
                    <Label Content="Imcompleto" x:Name="LblEstadoA1" x:FieldModifier="public" Margin="1,1,-1,-1" Foreground="#FFEFF2F6"/>
                </Border>
            </Grid>

            <Grid Background="#121F3D" Margin="43,50,75,247" Grid.Column="1">
                <Border Background="#FF4DE000" BorderBrush="Silver" BorderThickness="1" CornerRadius="20,20,20,20" >
                    <Label Margin="0,9,185,50">
                        <Label.Background>
                            <ImageBrush ImageSource="/Images/atom.png"/>
                        </Label.Background>
                        <Label.Foreground>
                            <ImageBrush ImageSource="/Images/brain.png"/>
                        </Label.Foreground>
                    </Label>
                </Border>
                <Border Background="#40577B" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,20,20" Margin="0,85,0,0" >
                    <Label Content="Imcompleto" x:Name="LblEstadoA2" x:FieldModifier="public" Foreground="#FFEFF2F6"/>
                </Border>
            </Grid>

            <Grid Background="#121F3D" Margin="43,250,75,56" Grid.Column="1">
                <Border Background="#97FA9C" BorderBrush="Silver" BorderThickness="1" CornerRadius="20,20,20,20" Margin="0,-4,0,-5" >
                    <Label  HorizontalAlignment="Left" Width="72" Margin="0,9,0,50">
                        <Label.Background>
                            <ImageBrush ImageSource="/Images/brain.png"/>
                        </Label.Background>
                    </Label>
                </Border>
                <Border Background="#40577B" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,20,20" Margin="0,79,0,-5" >
                    <Label Content="Imcompleto" x:Name="LblEstadoB2" x:FieldModifier="public" Foreground="#FFEFF2F6"/>
                </Border>
            </Grid>
            <Grid Background="#121F3D"  Margin="80,250,78,56">
                <Border Background="#FFF72E" BorderBrush="Silver" BorderThickness="1" CornerRadius="20,20,20,20" Margin="-5,-4,5,-5" >
                    <Label Margin="0,0,185,50">
                        <Label.Background>
                            <ImageBrush ImageSource="/Images/aprender-en-linea.png"/>
                        </Label.Background>
                    </Label>
                </Border>
                <Border Background="#40577B" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,20,20" Margin="-5,79,5,-5" >
                    <Label Content="Imcompleto" x:Name="LblEstadoB1" x:FieldModifier="public" Foreground="#FFEFF2F6"/>
                </Border>
            </Grid>
            <Button Content="Iniciar" x:Name="rosa" x:FieldModifier="public" HorizontalAlignment="Left" Margin="279,142,0,0" VerticalAlignment="Top" Width="45"/>
            <Button Content="Iniciar" x:Name="amarillo" x:FieldModifier="public" HorizontalAlignment="Left" Margin="279,338,0,0" VerticalAlignment="Top" Width="45" RenderTransformOrigin="0.858,0.608"/>
            <Button Content="Iniciar" x:Name="verde" x:FieldModifier="public" Margin="236,140,99,0" VerticalAlignment="Top" RenderTransformOrigin="0.75,0.612" Grid.Column="1"/>
            <Button Content="Iniciar" x:Name="verdeAbajo" x:FieldModifier="public" HorizontalAlignment="Left" Margin="236,333,0,0" VerticalAlignment="Top" Width="45" Grid.Column="1"/>



        </Grid>

    </Grid>
</Window>
