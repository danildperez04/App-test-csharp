<Window x:Class="App_test_csharp.FrmLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_test_csharp"
        mc:Ignorable="d"
        Title="FrmLogin" Height="490" Width="800" Loaded="Main">
    <Grid Background="#121F3D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Background="#121F3D">
            <TabControl Margin="0,0,10,10">
                <TabItem Header="SIGN IN">
                    <Grid Background="#121F3D">
                        <Label Content="SIGN IN" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Black" FontSize="20"/>
                        <Label Content="Carnet" HorizontalAlignment="Left" Margin="32,191,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Black" FontSize="18"/>
                        <TextBox x:Name="TxtSignInCarnet" x:FieldModifier="public" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" Height="20" Margin="0,237,0,0"/>
                        <Label Content="Password" HorizontalAlignment="Left" Margin="32,271,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Black" FontSize="18"/>
                        <PasswordBox x:Name="TxtPassword" x:FieldModifier="public" HorizontalAlignment="Center" Margin="0,317,0,0" VerticalAlignment="Top" Width="270" Height="20"/>
                        <Button x:Name="BtnSignIn" x:FieldModifier="public" Content="SIGN IN" HorizontalAlignment="Center" Margin="0,362,0,0" VerticalAlignment="Top" Width="130" Height="40"/>
                        <Label Content="" HorizontalAlignment="Center" Margin="0,82,0,0" VerticalAlignment="Top" Height="85" Width="85">
                            <Label.Background>
                                <ImageBrush ImageSource="/View/user.png"/>
                            </Label.Background>

                        </Label>
                    </Grid>
                </TabItem>
                <TabItem Header="SIGN UP">
                    <Grid Background="#121F3D">
                        <Label Content="SIGN UP" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Black" FontSize="20"/>
                        <Label Content="Username" HorizontalAlignment="Left" Margin="27,77,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Black" FontSize="18" RenderTransformOrigin="0.451,0.187"/>
                        <TextBox x:Name="TxtSignUpUsername" x:FieldModifier="public" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" Height="20" Margin="27,123,0,0"/>
                        <Label Content="Carnet" HorizontalAlignment="Left" Margin="27,162,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Black" FontSize="18"/>
                        <TextBox x:Name="TxtSignUpCarnet" x:FieldModifier="public" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" Height="20" Margin="27,208,0,0"/>
                        <Label Content="Password" HorizontalAlignment="Left" Margin="27,242,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Arial Black" FontSize="18"/>
                        <PasswordBox x:Name="TxtSignUpPassword" x:FieldModifier="public" HorizontalAlignment="Left" Margin="27,288,0,0" VerticalAlignment="Top" Width="270" Height="20"/>
                        <RadioButton Content="Male" HorizontalAlignment="Left" Margin="254,337,0,0" VerticalAlignment="Top"/>
                        <RadioButton Content="Female" HorizontalAlignment="Left" Margin="178,337,0,0" VerticalAlignment="Top"/>
                        <Button x:Name="BtnSignUp" x:FieldModifier="public" Content="SIGN UP" HorizontalAlignment="Center" Margin="0,362,0,0" VerticalAlignment="Top" Width="130" Height="40"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid Grid.Column="0" Background="#121F3D" Margin="10,10,10,10">
            <Border BorderThickness="2" BorderBrush="White"></Border>
        </Grid>
    </Grid>
</Window>
